<form>
  <label>RDS Adapter Splunk Dashboard</label>
  <description>Switch between environments and time ranges</description>

  <fieldset submitButton="false">
    <!-- Environment dropdown -->
    <input type="dropdown" token="env">
      <label>Environment</label>
      <choice value="DEV">DEV</choice>
      <choice value="PROD">PROD</choice>
      <default>DEV</default>
      <change>
        <eval token="index">case($env$="DEV","dev_index",$env$="PROD","prod_index","*")</eval>
        <eval token="host">case($env$="DEV","dev_host",$env$="PROD","prod_host","*")</eval>
        <eval token="sourcetype">case($env$="DEV","dev_sourcetype",$env$="PROD","prod_sourcetype","*")</eval>
      </change>
    </input>

    <!-- Time picker -->
    <input type="time" token="time_range">
      <label>Select Time Range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>

  <!-- Panels -->
  <row>
    <panel>
      <title>Event Count by Source</title>
      <chart>
        <search>
          <query>index=$index$ host=$host$ sourcetype=$sourcetype$
| stats count by source</query>
          <earliest>$time_range.earliest$</earliest>
          <latest>$time_range.latest$</latest>
        </search>
        <option name="charting.chart">bar</option>
      </chart>
    </panel>

    <panel>
      <title>Top Hosts</title>
      <table>
        <search>
          <query>index=$index$ sourcetype=$sourcetype$
| top limit=10 host</query>
          <earliest>$time_range.earliest$</earliest>
          <latest>$time_range.latest$</latest>
        </search>
      </table>
    </panel>
  </row>
</form>
